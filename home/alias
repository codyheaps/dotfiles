function lp-connect() {
    docker exec -it "$1" bash
}

function update_sso_role() {
    local role_name="$1"
    
    if [ -z "$role_name" ]; then
        echo "Usage: update_sso_role <role_name>"
        return 1
    fi
    
    if [ ! -f ~/.aws/credentials ]; then
        echo "Error: ~/.aws/credentials file not found"
        return 1
    fi
    
    # Use sed to replace the sso_role_name value
    sed -i '' "s/sso_role_name = .*/sso_role_name = $role_name/" ~/.aws/credentials

    echo "Updated sso_role_name to: $role_name... relogging"

    lms login
}
